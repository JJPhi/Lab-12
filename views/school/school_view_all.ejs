<!DOCTYPE html>
<html>
<head>
    <title>School - View All</title>
</head>
<body>
<h1><a href="/school/add">School</a> <br /></h1>

<table border="1">
    <tr><th>Name</th><th>Actions</th></tr>
    <% for(var i = 0; i < result.length; i++) { %>
    <tr>
        <td><%= result[i].school_name %></td>
        <td>
            <a href="/school/edit/?school_id=<%= result[i].school_id %>">
                Edit
            </a>
            &nbsp;<a href="/school/delete?school_id=<%= result[i].school_id %>">
                Delete
            </a>
        </td>
    </tr>

    <% } %>
</table>

<% if(locals.was_successful_delete) { %>
<div>
    <p style="color:red;">School delete was successful</p>
</div>
<% } %>
</body>
</html>